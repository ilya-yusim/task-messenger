{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
                
        {
                "name": "Attach to Manager Process",
                "type": "cppdbg",
                "request": "attach",
                "program": "/usr/src/app/manager-executable", // Path to the executable in the container
                "processId": "${command:pickProcess}", // Allows you to select the process
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb", // Path to gdb in the container
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
        },
        {
            "name": "(Windows) Attach",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "Worker",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/builddir-worker/worker/worker.exe",
            "args": ["-c", "config/config-worker.json","--mode","blocking"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": []
        },
        {
            "name": "Worker (UI)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/builddir-worker/worker/worker.exe",
            "args": ["-c", "config/config-worker.json","--mode","blocking","--ui"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "worker (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/builddir-worker/worker/worker",
            "args": ["-c", "config/config-worker.json","--mode","blocking","--ui"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Worker Python Script",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/builddir-worker/worker/startWorkerAndVN.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/worker",
            "env": {
                "MANAGER_IP": "10.147.20.0",
                "MANAGER_PORT": "8080"
            }
        },
        {
            "name": "Manager (Python wrapper)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/builddir-manager/manager/startManagerAndVN.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/builddir-manager/manager",
            "env": {
                "MANAGER_PORT": "8080"
            }
        },
        {
            "name": "Manager",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/builddir-manager/manager/manager.exe",
            "args": ["-c", "config/config-manager.json"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal"
        },
        {
            "name": "Manager (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/builddir-manager/manager/manager",
            "args": ["-c", "config/config-manager.json"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}